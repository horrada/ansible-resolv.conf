{# Store this file in roles/templates/resolv.conf.j2 #}
# resolv.conf generated by ansible
{% if 'resolv_conf_search_domains' is defined %}
search {{ resolv_conf_search_domains }}
{% else %}
resolv_conf_search_domains is not defined
{% endif %}
{% if 'resolv_conf_nameservers' in group_names %}
nameserver ::1
{% endif %}
{% for ip in resolv_conf_nameservers %}
nameserver {{ ip }}
{% endfor %}
